<confirm-radio>
    <div class="nes-container is-rounded is-dark">
        <label>
            <input type="radio" class="nes-radio is-dark" name="confirm" value="Yes" onclick={ handleClick } checked/>
            <span>Yes</span>
        </label>

        <label>
            <input type="radio" class="nes-radio is-dark" name="confirm" value="No" onclick={ handleClick } />
            <span>No</span>
        </label>
    </div>

    <script>
        export default {
            onBeforeMount(props) {
                console.log(props)
            },
            handleClick(e) {
                //親コンポーネントから渡されたイベント、Yes　or Noを返す
                this.props.observable.trigger(this.props.event, this.props.value, e.target.value)
            }
        }
    </script>
</confirm-radio>